<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apiiit_rkv.firebasegoogleauth.UploadFirst">

    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <VideoView
        android:id="@+id/vid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:layout_alignStart="@+id/img" />

    <Button
        android:id="@+id/select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:onClick="handlerImage"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/vid"
        android:layout_toLeftOf="@+id/select_video"
        android:layout_toStartOf="@+id/select_video" />

    <Button
        android:id="@+id/select_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:onClick="handlerVideo"
        android:layout_alignBaseline="@+id/select_image"
        android:layout_alignBottom="@+id/select_image"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/upload_aws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:onClick="handlerAWS"
        android:layout_alignBaseline="@+id/select_video"
        android:layout_alignBottom="@+id/select_video"
        android:layout_toRightOf="@+id/select_video"
        android:layout_toEndOf="@+id/select_video"
        android:layout_marginLeft="11dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_marginStart="11dp" />

</RelativeLayout>
